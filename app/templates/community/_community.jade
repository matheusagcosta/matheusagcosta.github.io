section#projects.community
  h2 Community
  p During my free time I try to help mentoring people, organizing events or design and code free projects.
  nav.community__nav
    each community, slug in public.templates.community._data
      a.community__link(href="#{ community.url }" target="_blank" rel="noopener" aria-label="#{ community.desc }")
        if community.dark
          img.community__icon(src="../../assets/logo-#{ community.icon }.svg", alt="#{ community.legend }", width="150", height="150")
          img.community__icon(src="../../assets/logo-#{ community.icon }-dark.svg", alt="#{ community.legend }", width="150", height="150")
        else
          img.community__icon(src="../../assets/logo-#{ community.icon }.svg", alt="#{ community.legend }", width="150", height="150")
        strong.community__headline #{ slug }
        small.community__legend #{ community.desc }
