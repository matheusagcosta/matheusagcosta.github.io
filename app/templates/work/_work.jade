section#work.work
  h2 Selected Work
  p.work__text Here are the latest products Iâ€™ve been working on.
  nav#drag.work__nav
    each work, slug in public.templates.work._data
      if work.show == true
        a.work__card.is-light-visible(href="#{ work.url }" target="#{ work.target }" rel="noopener" aria-label="#{ work.legend }")
          picture.work__image
            source(srcset="../../assets/image-#{ slug }.webp", type="image/webp")
            source(srcset="../../assets/image-#{ slug }.png", type="image/png")
            img(src="../../assets/image-#{ slug }.png", alt="#{ work.legend }", width="758", height="506")
          h3.work__headline #{ work.title }
          small.work__legend #{ work.desc }
          if work.case == true
            button.work__button #{ work.action }
          else
            span.work__alert Case study coming soon!
        a.work__card.is-dark-visible(href="#{ work.url }#contrast-on" target="#{ work.target }" rel="noopener" aria-label="#{ work.legend }")
          picture.work__image
            source(srcset="../../assets/image-#{ slug }.webp", type="image/webp")
            source(srcset="../../assets/image-#{ slug }.png", type="image/png")
            img(src="../../assets/image-#{ slug }.png", alt="#{ work.legend }", width="758", height="506")
          h3.work__headline #{ work.title }
          small.work__legend #{ work.desc }
          if work.case == true
            button.work__button #{ work.action }
          else
            span.work__alert Case study coming soon!
