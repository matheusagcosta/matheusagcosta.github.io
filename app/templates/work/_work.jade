section#work.work
  h2 Recent Work
  p.work__text Here are the latest products Iâ€™ve been working on. Case studies coming soon!
  nav#drag.work__nav
    each work, slug in public.templates.work._data
      if work.show == true
        .work__card(href="#{ work.url }" target="_blank" rel="noopener" aria-label="#{ work.legend }")
          picture.work__image
            source(srcset="../../assets/image-#{ slug }.webp", type="image/webp")
            source(srcset="../../assets/image-#{ slug }.png", type="image/png")
            img(src="../../assets/image-#{ slug }.png", alt="#{ work.legend }", width="758", height="506")
          h3.work__headline #{ work.title }
          small.work__legend #{ work.desc }
          a.work__button(href="#{ work.url }" target="_blank" rel="noopener" aria-label="Link to Project") #{ work.action }
